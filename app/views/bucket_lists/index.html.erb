<p id="notice"><%= notice %></p>

<h1>Listing Bucket Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bucket_lists.each do |bucket_list| %>
      <tr id="<%= dom_id(bucket_list) %>">
        <td><%= bucket_list.title %></td>
        <td><%= bucket_list.description %></td>
        <td><%= link_to 'Show', bucket_list %></td>
        <td><%= link_to 'Edit', edit_bucket_list_path(bucket_list) %></td>
        <td><%= link_to 'Destroy', bucket_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

