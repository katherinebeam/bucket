<h1><%= @bucket_list.title %></h1>

<table class="bucketlist_items">
  <thead>
    <tr>
      <th width="25%">Completed?</th>
      <th width="65%">Content</th>
      <th width="10%">Functions</th>
    </tr>
  </thead>
  <tbody>
    <% @bucket_list.bucketlist_items.each do |bucketlist_item| %>
    <tr id="<%= dom_id(bucketlist_item) %>">
      <td>
        <% if bucketlist_item.completed? %>
          <%= bucketlist_item.completed_at %>
        <% else %>
          <%= link_to "Mark Complete", complete_bucket_list_bucketlist_item_path(bucketlist_item), method: :patch %>
        <% end %>
      </td>
      <td><%= bucketlist_item.content %></td>
      <td>
        <%= link_to 'Edit', edit_bucket_list_bucketlist_item_path(bucketlist_item) %>
        <%= link_to 'Delete', bucket_list_bucketlist_item_path(bucketlist_item), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'New Bucket List Item', new_bucket_list_bucketlist_item_path %>
</p>
